# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=srs_assistant
POSTGRES_USER=srs_user
POSTGRES_PASSWORD=srs_password_change_me
POSTGRES_PORT=5432

# ============================================
# Application Configuration
# ============================================
APP_PORT=8501
ENVIRONMENT=development
LOG_LEVEL=INFO
OUTPUT_DIR=./output

# ============================================
# LLM Configuration
# ============================================
# Required: At least one LLM provider must be configured
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Langfuse (Observability)
# ============================================
# Optional: For tracing, latency, and cost tracking
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# Memori (Long-term Memory)
# ============================================
# Optional: For persistent facts storage
MEMORI_API_URL=
MEMORI_API_KEY=

# ============================================
# pgAdmin (Database Management Tool)
# ============================================
# Optional: Only used when running with 'tools' profile
PGADMIN_EMAIL=admin@srs.local
PGADMIN_PASSWORD=admin_change_me
PGADMIN_PORT=5050

